# ==========================================
# PRODUCTION CONFIGURATION
# ==========================================
# Copy this file to .env and update with your production values

NODE_ENV=production

# ==========================================
# DOMAIN CONFIGURATION
# ==========================================
# Your production domain (without http/https)
DOMAIN=zora-edu.ae

# Use HTTPS in production
PROTOCOL=https

# ==========================================
# PORT CONFIGURATION
# ==========================================
# Production ports
CADDY_PORT=443
CADDY_HTTP_PORT=80

# Internal service ports
FRONTEND_PORT=3000
BACKEND_PORT=8000

# ==========================================
# API CONFIGURATION
# ==========================================
VITE_API_URL=https://zora-edu.ae/api

# ==========================================
# SSL/TLS CONFIGURATION
# ==========================================
# Enable automatic HTTPS with Let's Encrypt
AUTO_HTTPS=true
ACME_EMAIL=admin@zora-edu.ae

# ==========================================
# SMTP CONFIGURATION
# ==========================================
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-smtp-user@example.com
SMTP_PASSWORD=your-production-smtp-password
SMTP_FROM_EMAIL=noreply@zora-edu.ae
SMTP_FROM_NAME=Zora - AI Education Platform

# ==========================================
# EMAIL RECIPIENTS
# ==========================================
EMAIL_INFO=info@zora-edu.ae
EMAIL_SALES=sales@zora-edu.ae
EMAIL_SUPPORT=support@zora-edu.ae
EMAIL_ADMIN=admin@zora-edu.ae

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10
FRONTEND_URL=https://zora-edu.ae

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=warn
